<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

    <appender name="Logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/groovify.log</file>
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/groovify-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- Reduce DB + connection pool verbosity -->
    <logger name="org.hibernate" level="OFF" />
    <logger name="com.zaxxer.hikari" level="OFF" />

    <!--
     Logback Logging Levels:

     OFF     - Turns off logging completely for this logger.
     FATAL   - Signifying a critical system failure.
     ERROR   - Serious issues that require attention.
     WARN    - Potential issues or important situations that are not errors.
     INFO    - Routine information about application progress.
     DEBUG   - General debugging information.
     TRACE   - Most detailed information, typically only for debugging.
     -->

    <!-- ======== Services ======== -->
    <logger name="com.groovify.service.GenreImportServiceImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.LoginServiceImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.PlaylistServiceImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.ProfileServiceImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.RecommendationService" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.RegisterServiceImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.SongImportImpl" level="DEBUG" additivity="true" />
    <logger name="com.groovify.service.SongServiceImpl" level="DEBUG" additivity="true" />

    <!-- ======== Controllers ======== -->
    <logger name="com.groovify.web.controller.CustomErrorController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.DeveloperController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.HomeController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.LandingController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.PlaylistsController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.ProfileController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.RegisterController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.SearchController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.SessionController" level="DEBUG" additivity="true" />
    <logger name="com.groovify.web.controller.SongController" level="DEBUG" additivity="true" />

    <!-- ======== Main Application ======== -->
    <logger name="com.groovify.GroovifyApplication" level="DEBUG" additivity="true" />

    <!--
      Method 2: Disable via system property when running the app
      ./gradlew bootRun -DLOGIN_SERVICE_LOG=OFF -> turns off logging
   -->
    <logger name="com.groovify.service.LoginServiceImpl"
            level="${LOGIN_SERVICE_LOG:-DEBUG}"
            additivity="true" />

    <!-- Default logging level -->
    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="Logfile" />
    </root>
</configuration>
