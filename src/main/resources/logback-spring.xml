<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

    <appender name="Logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/groovify.log</file>
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/groovify-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- Reduce DB + connection pool verbosity -->
    <logger name="org.hibernate" level="OFF" />
    <logger name="com.zaxxer.hikari" level="OFF" />

    <!--
    Logback Logging Levels:

    OFF     - Turns off logging completely for this logger.
    FATAL   - Signifying a critical system failure.
    ERROR   - Serious issues that require attention.
    WARN    - Potential issues or important situations that are not errors.
    INFO    - Routine information about application progress.
    DEBUG   - General debugging information.
    TRACE   - Most detailed information, typically only for debugging.
    -->

    <!-- ======== Services ======== -->
    <logger name="com.groovify.service.GenreImportServiceImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.LoginServiceImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.PlaylistServiceImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.ProfileServiceImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.RecommendationService" level="INFO" additivity="true" />
    <logger name="com.groovify.service.RegisterServiceImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.SongImportImpl" level="INFO" additivity="true" />
    <logger name="com.groovify.service.SongServiceImpl" level="INFO" additivity="true" />

    <!-- ======== Controllers ======== -->
    <logger name="com.groovify.web.controller.CustomErrorController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.DeveloperController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.HomeController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.LandingController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.PlaylistsController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.ProfileController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.RegisterController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.SearchController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.SessionController" level="INFO" additivity="true" />
    <logger name="com.groovify.web.controller.SongController" level="INFO" additivity="true" />

    <!-- ======== Main Application ======== -->
    <logger name="com.groovify.GroovifyApplication" level="INFO" additivity="true" />

    <!-- Default logging level -->
    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="Logfile" />
    </root>
</configuration>
